    <span class="k">def</span> <span class="nf">check_log_is_enable</span><span class="p">(</span><span class="bp">self</span><span class="p">):</span>
        <span class="s">''' æ ¡éªŒæ‰‹æœºè®¾å¤‡æ˜¯å¦æ”¯æŒlogcatå‘½ä»¤   '''</span>
